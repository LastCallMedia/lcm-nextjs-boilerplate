{
  "name": "lcm-nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:seed-posts": "tsx --env-file=.env prisma/seed-posts.ts",
    "db:reset": "prisma migrate reset",
    "dev": "pnpm docker:dev && next dev --turbo",
    "dev:only": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cypress": "cd tests && pnpm cypress:run",
    "test:cypress:open": "cd tests && pnpm cypress:open",
    "test:cypress:test": "cd tests && pnpm cypress:test",
    "test:cypress:convert": "cd tests && pnpm convert:playwright",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "install:playwright": "playwright install",
    "clean": "rm -rf .next out node_modules/.cache",
    "docker:dev": "docker compose up -d postgres mailhog",
    "docker:dev:down": "docker compose down",
    "docker:prod": "docker compose --env-file .env.docker up -d",
    "docker:prod:down": "docker compose --env-file .env.docker down",
    "docker:build": "docker compose build",
    "act:full": "act",
    "act:lint": "act -j code-quality",
    "act:jest": "act -j jest-tests",
    "act:e2e": "act -j e2e-tests",
    "vercel-build": "prisma generate && next build",
    "vercel-deploy": "prisma generate && prisma migrate deploy && tsx prisma/seed.ts && next build"
  },
