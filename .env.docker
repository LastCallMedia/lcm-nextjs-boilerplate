# Environment variables for Docker Compose
# Copy this to .env and fill in your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=lcm-nextjs-boilerplate
POSTGRES_PORT=5432

# Database URL for application (constructed from above values)
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/lcm-nextjs-boilerplate

# Mailhog
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Application (for production container)
APP_PORT=3000
AUTH_SECRET=your_auth_secret_here
AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
